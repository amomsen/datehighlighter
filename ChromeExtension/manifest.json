{
  "name": "Date Highlighter",
  "short_name" : "Date Highlighter",
  "version": "1.0.2",
  "permissions": ["tabs", "notifications", "activeTab"],
  "description": "Highlights dates in the current tab.",
  "icons": {"16": "16.png", 
	  "24": "24.png", 
	  "32": "32.png", 
	  "48": "48.png", 
	  "128": "128.png", 
	  "256": "256.png"},
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "browser_action": {
    "default_title": "Highlight dates",
	"default_icon": "16.png"
  },
  "manifest_version": 2,
   "web_accessible_resources": ["48.png"] 
  
}
